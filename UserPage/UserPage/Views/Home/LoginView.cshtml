@model UserPage.Models.UserViewModel
@{
    ViewBag.Title = "Login Page";
}
<h2>Login</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div>
        Username: @Html.TextBoxFor(m => m.Username)
    </div>
    <div>
        Password: @Html.PasswordFor(m => m.Password)
    </div>
    <div>
        <input type="submit" value="Login" />
        <a href="@Url.Action("SignupView", "Home")"><button type="button">Sign Up</button></a>
    </div>
    <div style="color:red;">
        @ViewBag.Message
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Made by Bhavya</p> <!-- foot note to show who made the page-->
    </footer>
}

