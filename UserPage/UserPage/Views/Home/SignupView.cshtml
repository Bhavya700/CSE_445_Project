@model UserPage.Models.UserViewModel
@{
    ViewBag.Title = "Signup Page";
}
<h2>Sign Up</h2>

@using (Html.BeginForm("Signup", "Home", FormMethod.Post))
{
    <div>
        Username: @Html.TextBoxFor(m => m.Username)
    </div>
    <div>
        Password: @Html.PasswordFor(m => m.Password)
    </div>
    <div>
        <input type="submit" value="Create Account" />
    </div>
    <div style="color:green;">
        @ViewBag.Message
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - Made by Bhavya</p> <!-- foot note to show who made the page-->
    </footer>
}
